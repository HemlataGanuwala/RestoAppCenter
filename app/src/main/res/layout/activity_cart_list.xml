<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    tools:context=".CartListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarcartlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:text="Cart List"
                android:textColor="@color/colorsplash"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imgpencile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_pencil" />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="Items"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclecartlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                </android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight=".40"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="Total Cost"
                        android:textColor="@color/colorPrimary"
                        android:textSize="28sp"
                        app:fontFamily="@font/acme" />

                    <TextView
                        android:id="@+id/tvtotal_cost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight=".80"
                        android:gravity="center"
                        android:paddingRight="20dp"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="28sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_button"
                    android:fontFamily="@font/acme"
                    android:text="Order"
                    android:textAllCaps="false"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp" />
            </LinearLayout>



        </ScrollView>




    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"
        android:background="#ffffff"
        app:menu="@menu/drawer_menu"
        app:theme="@style/NavigationTheme"
        app:itemIconTint="@color/text_menucolor"
        app:itemTextColor="@color/text_menucolor"
        app:itemBackground="@drawable/selected_itemcolor">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>